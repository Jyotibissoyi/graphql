generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
}

model FileMeta {
  id         Int      @id @default(autoincrement())
  filename   String
  mimetype   String
  encoding   String
  size       Int
  url        String
  uploadedAt DateTime @default(now())
}

model Document {
  id           Int      @id @default(autoincrement())
  title        String
  templateData Json
  html         String
  pdfUrl       String
  createdAt    DateTime @default(now())
}

